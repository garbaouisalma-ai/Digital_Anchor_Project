<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>من أنت حين تنطفئ الشاشة؟ | رحلة السيادة الرقمية</title>
    
    <!-- React & ReactDOM -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    
    <!-- Babel -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Tailwind Config for Arabic Fonts -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Tajawal', 'sans-serif'],
                        serif: ['Amiri', 'serif'],
                    },
                    colors: {
                        'anchor-blue': '#0f172a',
                        'anchor-gold': '#d4af37',
                        'anchor-light': '#f8fafc',
                    }
                }
            }
        }
    </script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400&family=Tajawal:wght@300;400;500;700;800&display=swap" rel="stylesheet">
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <style>
        body {
            font-family: 'Tajawal', sans-serif;
            background-color: #f8fafc;
            color: #1e293b;
        }
        .gold-gradient {
            background: linear-gradient(135deg, #d4af37 0%, #fcd34d 50%, #d4af37 100%);
        }
        .book-shadow {
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04), -10px 0 20px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect } = React;

        // --- Icons Components (using Lucide via SVG for React) ---
        const AnchorIcon = () => (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><circle cx="12" cy="5" r="3"/><line x1="12" x2="12" y1="22" y2="8"/><path d="M5 12H2a10 10 0 0 0 20 0h-3"/></svg>
        );
        const BookIcon = () => (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/></svg>
        );
        const PenIcon = () => (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"/></svg>
        );
        const CheckIcon = () => (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
        );
         const AwardIcon = () => (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><circle cx="12" cy="8" r="7"/><polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/></svg>
        );

        // --- Main App Component ---
        function App() {
            const [pledgeSigned, setPledgeSigned] = useState(false);
            const [pledgeName, setPledgeName] = useState("");

            const handlePledgeSubmit = (e) => {
                e.preventDefault();
                if(pledgeName.trim()) {
                    setPledgeSigned(true);
                }
            };

            return (
                <div className="min-h-screen flex flex-col">
                    {/* Header */}
                    <nav className="bg-anchor-blue text-white py-4 px-6 shadow-lg sticky top-0 z-50">
                        <div className="max-w-6xl mx-auto flex justify-between items-center">
                            <div className="flex items-center space-x-2 space-x-reverse">
                                <div className="text-anchor-gold"><AnchorIcon /></div>
                                <span className="font-bold text-xl tracking-wide">المرساة الرقمية</span>
                            </div>
                            <div className="hidden md:flex space-x-6 space-x-reverse text-sm font-medium">
                                <a href="#book" className="hover:text-anchor-gold transition">الكتاب</a>
                                <a href="#workbook" className="hover:text-anchor-gold transition">التطبيقات</a>
                                <a href="#pledge" className="hover:text-anchor-gold transition">العهد</a>
                            </div>
                            <button className="bg-anchor-gold text-anchor-blue px-4 py-2 rounded-full font-bold text-sm hover:bg-yellow-400 transition">
                                ابدأ الرحلة
                            </button>
                        </div>
                    </nav>

                    {/* Hero Section */}
                    <header className="bg-anchor-blue text-white relative overflow-hidden">
                        <div className="absolute top-0 left-0 w-full h-full opacity-10 pointer-events-none">
                            <svg width="100%" height="100%">
                                <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
                                    <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" strokeWidth="1"/>
                                </pattern>
                                <rect width="100%" height="100%" fill="url(#grid)" />
                            </svg>
                        </div>
                        
                        <div className="max-w-6xl mx-auto px-6 py-20 md:py-32 flex flex-col md:flex-row items-center relative z-10">
                            <div className="md:w-1/2 mb-10 md:mb-0 text-center md:text-right">
                                <span className="inline-block bg-anchor-blue border border-anchor-gold text-anchor-gold px-3 py-1 rounded-full text-xs font-bold mb-4">
                                    الإصدار الجديد 2025
                                </span>
                                <h1 className="text-4xl md:text-6xl font-bold leading-tight mb-6 font-serif">
                                    من أنت حين <br/>
                                    <span className="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-yellow-600">تنطفئ الشاشة؟</span>
                                </h1>
                                <p className="text-gray-300 text-lg md:text-xl mb-8 leading-relaxed max-w-lg">
                                    دليلك العملي لاستعادة السيطرة على انتباهك، واكتشاف قيمك الحقيقية، وبناء حياة ذات معنى بعيداً عن ضجيج الإشعارات.
                                </p>
                                <div className="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
                                    <a href="#book" className="bg-anchor-gold text-anchor-blue px-8 py-3 rounded-lg font-bold hover:bg-yellow-400 transition flex items-center justify-center gap-2">
                                        <BookIcon /> اكتشف الكتاب
                                    </a>
                                    <a href="#pledge" className="border border-white text-white px-8 py-3 rounded-lg font-bold hover:bg-white hover:text-anchor-blue transition flex items-center justify-center gap-2">
                                        <PenIcon /> وقع العهد
                                    </a>
                                </div>
                            </div>
                            
                            <div className="md:w-1/2 flex justify-center">
                                {/* Book Mockup */}
                                <div className="relative w-64 h-96 bg-gray-800 rounded-r-xl rounded-l-sm book-shadow transform -rotate-6 hover:rotate-0 transition duration-500 cursor-pointer">
                                    <div className="absolute inset-0 bg-gradient-to-br from-gray-700 to-gray-900 rounded-r-xl rounded-l-sm flex flex-col items-center justify-center p-6 text-center border-l-4 border-gray-600">
                                        <div className="text-anchor-gold mb-4"><AnchorIcon /></div>
                                        <h3 className="text-white font-serif text-2xl font-bold mb-2">من أنت حين<br/>تنطفئ الشاشة؟</h3>
                                        <div className="w-16 h-1 bg-anchor-gold my-4"></div>
                                        <p className="text-gray-400 text-xs">دليل الشباب للقيم والهدف<br/>في اقتصاد الانتباه</p>
                                        <p className="text-white text-sm font-bold mt-auto">نوال غرباوي</p>
                                    </div>
                                    {/* Pages Effect */}
                                    <div className="absolute top-1 bottom-1 right-0 w-4 bg-white opacity-10 rounded-r-sm"></div>
                                </div>
                            </div>
                        </div>
                    </header>

                    {/* Features / Workbook Preview */}
                    <section id="workbook" className="py-20 bg-white">
                        <div className="max-w-6xl mx-auto px-6">
                            <div className="text-center mb-16">
                                <h2 className="text-3xl md:text-4xl font-bold text-anchor-blue mb-4">ليس مجرد كتاب.. بل نظام حياة</h2>
                                <p className="text-gray-600 max-w-2xl mx-auto">
                                    يتضمن المشروع دفتر تمارين متقدم "المرساة الرقمية" لمساعدتك على تطبيق المفاهيم فوراً.
                                </p>
                            </div>

                            <div className="grid md:grid-cols-3 gap-8">
                                {/* Feature 1 */}
                                <div className="bg-slate-50 p-8 rounded-2xl hover:shadow-xl transition border border-slate-100">
                                    <div className="w-12 h-12 bg-blue-100 text-blue-600 rounded-xl flex items-center justify-center mb-6">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                                    </div>
                                    <h3 className="text-xl font-bold text-gray-800 mb-3">ميزانية الانتباه</h3>
                                    <p className="text-gray-600 leading-relaxed">
                                        تعلم كيف تدير الـ 112 ساعة يقظة أسبوعياً كما تدير أموالك. استثمر وقتك في ما يهم حقاً.
                                    </p>
                                </div>

                                {/* Feature 2 */}
                                <div className="bg-slate-50 p-8 rounded-2xl hover:shadow-xl transition border border-slate-100">
                                    <div className="w-12 h-12 bg-green-100 text-green-600 rounded-xl flex items-center justify-center mb-6">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
                                    </div>
                                    <h3 className="text-xl font-bold text-gray-800 mb-3">ميثاق العائلة</h3>
                                    <p className="text-gray-600 leading-relaxed">
                                        قوالب جاهزة لبناء "مناطق خالية من التكنولوجيا" في منزلك واستعادة دفء التواصل العائلي.
                                    </p>
                                </div>

                                {/* Feature 3 */}
                                <div className="bg-slate-50 p-8 rounded-2xl hover:shadow-xl transition border border-slate-100">
                                    <div className="w-12 h-12 bg-purple-100 text-purple-600 rounded-xl flex items-center justify-center mb-6">
                                        <AwardIcon />
                                    </div>
                                    <h3 className="text-xl font-bold text-gray-800 mb-3">شهادة السيادة</h3>
                                    <p className="text-gray-600 leading-relaxed">
                                        أكمل الرحلة واحصل على شهادة "السيادة الرقمية" كرمز لالتزامك بقيمك الجديدة.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </section>

                    {/* Pledge Section (Interactive) */}
                    <section id="pledge" className="py-20 bg-anchor-blue text-white relative">
                        <div className="max-w-4xl mx-auto px-6 text-center relative z-10">
                            <div className="inline-block p-3 rounded-full bg-white/10 mb-6">
                                <PenIcon size={32} className="text-anchor-gold" />
                            </div>
                            <h2 className="text-3xl md:text-5xl font-bold font-serif mb-6">عهد التحرر والقيادة</h2>
                            <p className="text-xl text-gray-300 mb-10">
                                "بكامل إرادتي، أعلن استقلالي عن سيطرة الخوارزميات، وأتعهد بأن أكون سيد أجهزتي لا عبداً لها."
                            </p>

                            {!pledgeSigned ? (
                                <form onSubmit={handlePledgeSubmit} className="bg-white/5 backdrop-blur-sm p-8 rounded-2xl border border-white/10 max-w-lg mx-auto">
                                    <div className="mb-6 text-right">
                                        <label className="block text-sm font-bold text-gray-300 mb-2">الاسم الكامل</label>
                                        <input 
                                            type="text" 
                                            value={pledgeName}
                                            onChange={(e) => setPledgeName(e.target.value)}
                                            placeholder="اكتب اسمك هنا للتوقيع..."
                                            className="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-600 text-white placeholder-gray-500 focus:outline-none focus:border-anchor-gold transition"
                                            required
                                        />
                                    </div>
                                    <div className="space-y-3 mb-8 text-right text-sm text-gray-300">
                                        <div className="flex items-center gap-2">
                                            <div className="w-4 h-4 rounded border border-anchor-gold flex items-center justify-center">✓</div>
                                            <span>أتعهد باستخدام هاتفي كأداة لخدمتي.</span>
                                        </div>
                                        <div className="flex items-center gap-2">
                                            <div className="w-4 h-4 rounded border border-anchor-gold flex items-center justify-center">✓</div>
                                            <span>أتعهد بأن أكون منتجاً للخير لا مستهلكاً للتفاهة.</span>
                                        </div>
                                    </div>
                                    <button type="submit" className="w-full bg-gradient-to-r from-yellow-500 to-yellow-600 text-white font-bold py-4 rounded-lg hover:shadow-lg hover:scale-[1.02] transition duration-200">
                                        توقيع العهد الآن
                                    </button>
                                </form>
                            ) : (
                                <div className="bg-white text-anchor-blue p-8 rounded-2xl shadow-2xl max-w-lg mx-auto animate-fade-in-up">
                                    <div className="w-16 h-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                                        <CheckIcon size={32} />
                                    </div>
                                    <h3 className="text-2xl font-bold mb-2">مبارك يا {pledgeName}!</h3>
                                    <p className="text-gray-600 mb-6">لقد خطوت خطوتك الأولى نحو الحرية الرقمية.</p>
                                    <div className="p-4 bg-gray-50 rounded-lg border border-gray-200 mb-6">
                                        <p className="font-serif italic text-lg text-gray-800">"أنت الآن القبطان، والشاشة مجرد أداة."</p>
                                    </div>
                                    <button onClick={() => window.print()} className="text-sm text-gray-500 underline hover:text-anchor-blue">
                                        طباعة وثيقة العهد
                                    </button>
                                </div>
                            )}
                        </div>
                    </section>

                    {/* Footer */}
                    <footer className="bg-slate-900 text-slate-400 py-12 border-t border-slate-800">
                        <div className="max-w-6xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-6">
                            <div className="flex items-center gap-2">
                                <span className="text-white font-bold">المرساة الرقمية</span>
                                <span className="text-xs px-2 py-0.5 bg-slate-800 rounded">v1.0</span>
                            </div>
                            <div className="text-sm">
                                جميع الحقوق محفوظة © نوال غرباوي 2025
                            </div>
                            <div className="flex gap-4">
                                <a href="#" className="hover:text-white transition">تويتر</a>
                                <a href="#" className="hover:text-white transition">لينكد إن</a>
                            </div>
                        </div>
                    </footer>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>